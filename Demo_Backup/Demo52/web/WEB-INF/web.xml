<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>mainController</servlet-name>
        <servlet-class>myservlet.mainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loadPlantServlet</servlet-name>
        <servlet-class>myservlet.loadPlantServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addtocartServlet</servlet-name>
        <servlet-class>myservlet.addtocartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>removeItemServlet</servlet-name>
        <servlet-class>myservlet.removeItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateQuantityItemServlet</servlet-name>
        <servlet-class>myservlet.updateQuantityItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>hoanthanhdonhangServlet</servlet-name>
        <servlet-class>myservlet.hoanthanhdonhangServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginSevlet</servlet-name>
        <servlet-class>myservlet.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>myservlet.logoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mainController</servlet-name>
        <url-pattern>/mainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loadPlantServlet</servlet-name>
        <url-pattern>/loadPlantServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addtocartServlet</servlet-name>
        <url-pattern>/addtocartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>removeItemServlet</servlet-name>
        <url-pattern>/removeItemServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateQuantityItemServlet</servlet-name>
        <url-pattern>/updateQuantityItemServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>hoanthanhdonhangServlet</servlet-name>
        <url-pattern>/hoanthanhdonhangServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginSevlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logoutServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>loadPlantServlet</welcome-file>
    </welcome-file-list>
</web-app>
